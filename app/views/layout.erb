
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <meta name="micro learning app" content="">
  <meta name="Sokunbi Taiwo" content="">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="text-centre">
<div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
  <header class="masthead mb-auto">
    <div class="inner">
      <h3 class="masthead-brand">3L</h3>
      <nav class="nav nav-masthead justify-content-center">
        <a class="nav-link active" href="/">Home</a>
        <% if admin_logged_in?  %>
        <a class="nav-link" href="/admin">Admin Dashboard</a>
        <a class="nav-link" href="/topics">Topics</a>
        <a class="nav-link" href="/logout">Logout</a>

        <% elsif logged_in? %>
          <a class="nav-link" href="/topics">Topics</a>
          <a class="nav-link" href="/dashboard">Dashboard</a>
          <a class="nav-link" href="/logout">Logout</a>

          <% else %>
          <a class="nav-link" href="/signup">Signup</a>
          <a class="nav-link" href="login">Login</a>
          <% end %>
      </nav>
    </div>
  </header>

  <% flash.keys.each do |type| %>
    <% if type %>
      <div class="alert alert-warning" role="alert">
        <%if flash[type].is_a? Hash %>
          <%= flash[type].keys[0] %>    <%= flash[type].values[0].pop %>

        <% else %>
          <div data-alert class="flash <%= type %> alert-box radius">
            <%= flash[type] %>
          </div>
        <% end %>
    <% end %>
    </div>
  <%end%>

  <%= yield %>
  <footer class="mastfoot mt-auto text-centre">
    <div class="inner">
      <p>copyright@Memunat</p>
    </div>
  </footer>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>