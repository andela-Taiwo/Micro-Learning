
<div class="container resource-card">
<% if @topic %>

  <div class="row  row-margin-bottom ">
      <div class="col-md-10 no-padding lib-item table_boundry" data-category="view">
        <div class="lib-panel">
          <div class="topic row box-shadow">
            <div class="col-md-4">
              <img class="lib-img-show" src="http://lorempixel.com/850/850/?random=123" height="100%">
            </div>
            <div class="col-md-6">
              <div class="lib-row lib-header">
                <%= @topic.title %>
                <div class="lib-header-seperator"></div>
              </div>
              <div class="lib-row">
                <p><%= @topic.description %></p>
              </div>
              <div class="lib-row topic-btn">
                <%= @topic.updated_at %>
                <div class="topic-form">
                  <form method="post" action="/user/topics/<%=@topic.id %>">
                    <input type="submit" value="Enroll" class="btn btn-outline-primary btn-sm">
                  </form>
                  <form method="get" action="/user/topics/<%=@topic.id %>/resource">
                    <input type="submit" value="Resource" class="btn btn-outline-info btn-sm">
                  </form>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-1"></div>
  </div>


  <% else %>
 <div class="row dash-row">
      <div class="col-sm-12">
        <div class="card">
          <div class="card-body text-center">
            <h3 class="text-center">No detail available for this course now. Check back later. </h3>
          </div>
        </div>
      </div>
    </div>
<% end %>
</div>