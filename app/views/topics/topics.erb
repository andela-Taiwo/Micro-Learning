
<div class="container">
  <h3><%=@title %></h3>
  <div class="row">

    <h4><%= @title %></h4>
  </div>
  <hr>

  <div class="row  row-margin-bottom ">
    <%  @topics.each do |topic|%>
    <div class="col-md-4 no-padding lib-item" data-category="view">
      <div class="lib-panel">
        <div class="topic row box-shadow">
          <div class="col-md-10">
            <div class="lib-row lib-header">
              <%= topic.title %>
              <div class="lib-header-seperator"></div>
            </div>
            <div class="lib-row">
             <p><%= topic.description[0...50] %></p>
            </div>
            <div class="lib-row topic-btn">
              <%= topic.updated_at %>
              <div class="topic-form">
                <form method="get" action="/topic/<%=topic.id %>">
                  <input type="submit" value="Detail" class="btn btn-outline-primary btn-sm">
                </form>
                <form method="get" action="/user/topics/<%=topic.id %>/resources">
                  <input type="submit" value="Resource" class="btn btn-outline-info btn-sm">
                </form>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
<!--      <div class="col-sm-1"></div>-->
    <% end %>
  </div>

</div>