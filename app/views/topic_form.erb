<h1><%= @title %></h1>

<form method="post" action="">
  <div class="form-group sm">
    <label for="exampleFormControlInput1">Title</label>
    <input type="text" class="form-control" id="topicTitle" placeholder="Title" name="topic[title]">
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <textarea class="form-control" id="topicDescription" rows="3" name="topic[description]"></textarea>
  </div>
 <button type="submit" class="btn btn-primary">Add Topic</button>
</form>

<%if @topics %>
<table class="table  table-hover">
  <thead>
  <tr>
     <th scope="col">Id </th>
     <th scope="col">Title</th>
    <th scope="col">Last Updated</th>
    <th scope="col">Actions</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @topics.each do |topic| %>
  <tr>
    <th scope="row"><%= topic.id%></th>
    <td><%=topic.title%></td>
    <td><%=topic.updated_at%></td>
    <td>
      <form method="get" action="/admin/topic/<%=topic.id %>">
<!--        <input id="hidden" type="hidden" name="_method" value="GET">-->
        <input type="submit" value="Edit" class="btn btn-outline-info btn-sm">
      </form>
<!--      <button class="btn btn-outline-info btn-sm">Edit</button>-->
    </td>

    <td>
      <form method="get" action="/admin/topic/<%=topic.id%>/resources">
<!--        <input id="hidden" type="hidden" name="_method" value="DELETE">-->
        <input type="submit" value="Resource" class="btn btn-outline-danger btn-sm">
      </form>
    <form method="post" action="/admin/topic/<%=topic.id %>/delete">
        <input id="hidden" type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete" class="btn btn-outline-danger btn-sm">
      </form>
    </td>

  </tr>
    <%end%>
  </tbody>
</table>
  <% end%>



